{
  "extends": "../../tsconfig",
  "references": [{ "path": "../base" }],
  "compilerOptions": {
    "allowJs": true /* Allow javascript files to be compiled. */,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "composite": true
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/index.ts",
    "../base/src/**/*.tsx",
    "../base/src/**/*.ts",
    "../base/src/index.ts"
  ],
  "exclude": [
    ".ci",
    "dist",
    "node_modules",
    "src/index.d.ts",
    "src/**/__tests__",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "website"
  ]
}
